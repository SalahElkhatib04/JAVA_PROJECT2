import java.io.*;
import java.util.*;

public class CustomerMenu {

    private static final String customerFilePath = "./customerData.txt";

    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);

        System.out.println("***************************");
        System.out.println("Welcome to our Restaurant *");
        while (true) {
            System.out.println("***************************");
            System.out.println("1. Menu");
            System.out.println("2. Profile");
            System.out.println("0. Exit");

            System.out.print("Enter your choice: ");
            int choice = input.nextInt();
            System.out.println("***************************");

            switch (choice) {
                case 1:
                    displayMenu();
                    break;
                case 2:
                    System.out.println("Login to Your Profile:");
                    System.out.print("Enter your name: ");
                    String consumer = input.nextLine();
                    String name = input.nextLine();
                    System.out.print("Enter your phone number: ");
                    String phoneNumber = input.next();

                    if (isPhoneNumberValid(phoneNumber)) {
                        if (!isPhoneNumberUnique(phoneNumber)) {
                            System.out.println("Login successful!");
                            displayProfile(name, phoneNumber);
                        } else
                            System.out.println("Login failed. Phone number is not registered.");
                    } else
                        System.out.println("Login failed. Phone number is not valid.");
                    break;
                case 0:
                    System.out.println("Exiting the Restaurant. Goodbye!");
                    System.exit(0);
                    break;
                default:
                    System.out.println("Invalid choice. Please enter a valid option.");
            }
        }
    }

    private static void displayMenu() {
        System.out.println("Menu:");
        System.out.println("1. Dish 1 - $10.99");
        System.out.println("2. Dish 2 - $12.99");
        System.out.println("3. Dish 3 - $8.99");
    }

    private static void displayProfile(String name, String phoneNumber) {
        System.out.println("Customer Profile:");
        System.out.println("Name: " + name);
        System.out.println("Phone Number: " + phoneNumber);
    }

     private static boolean isPhoneNumberValid(String phoneNumber) {
         if (phoneNumber != null && phoneNumber.matches("\\d{11}")) {
             return true;
         } else
             return false;
    }

    private static boolean isPhoneNumberUnique(String phoneNumber) {
        Scanner fr;
        try {
            fr = new Scanner(customerFilePath);
            String line = "";
            while (fr.hasNextLine()) {
                line = fr.nextLine();
                String[] customerRecord = line.split(",");

                if (phoneNumber.equals(customerRecord[2])) {
                    fr.close();
                    return false;
                }
                fr.nextLine();
            }
            fr.close();
            return true;
        } catch (Exception ex) {
            System.out.println(ex.getMessage());
            return false;
        }
    }
}
